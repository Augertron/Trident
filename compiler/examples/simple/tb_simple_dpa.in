(fabric.in tb_simple_dpa
  # the leading "." means that the name is not explicit
  # for start this is not exactly true, -- uh, where is 'done' mapped?
  (write .reset 1)
  (wait .reset 10)

  (write a 1.0d)
  (read a 1.0d)
  (write b -2.0d)
  (read b -2.0d)
	
  (write .start 1)

  (wait .done 50)
  # this could be an assertion too
  # then we might need wait done all or something...
  (read a -1.0d)
  (read b -2.0d)

  (write b 100.0d)
  (write .start 1)
  (wait .done 50)
  (read a 99.0d) 
)
